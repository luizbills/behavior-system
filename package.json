{
  "name": "behavior-system",
  "version": "1.2.0",
  "description": "A behavior system for javascript games inspired by Construct 2",
  "main": "lib/behavior-system.js",
  "author": "Luiz Bills",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/luizbills/behavior-system"
  },
  "bugs": {
    "url": "https://github.com/luizbills/behavior-system/issues"
  },
  "scripts": {
    "test": "standard && tape test/**/*.js | tap-dot",
    "build": "browserify lib/behavior-system.js -t es2040 -s BehaviorSystem -o dist/behavior-system.js",
    "min": "uglifyjs dist/behavior-system.js -c -m -o dist/behavior-system.min.js",
    "prepublishOnly": "npm test && npm run build && npm run min"
  },
  "tonicExampleFilename": "example.js",
  "keywords": [
    "game",
    "behavior",
    "system",
    "javascript",
    "html5",
    "canvas",
    "modular",
    "component"
  ],
  "devDependencies": {
    "browserify": "^16.2.0",
    "es2040": "^1.2.6",
    "standard": "^11.0.1",
    "tap-dot": "^1.0.5",
    "tape": "^4.9.0",
    "uglify-js": "^2.6.2"
  },
  "files": [
    "example.js",
    "lib/",
    "dist/"
  ],
  "engines": {
    "node": ">=6.x"
  }
}
