{
  "name": "behavior-system",
  "version": "1.2.1",
  "description": "A behavior system for javascript games inspired by Construct 2",
  "main": "lib/behavior-system.js",
  "author": "Luiz Bills",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/luizbills/behavior-system"
  },
  "bugs": {
    "url": "https://github.com/luizbills/behavior-system/issues"
  },
  "scripts": {
    "lint": "standard",
    "test": "npm run lint && tape test/**/*.js | tap-dot",
    "coverage": "istanbul cover tape test/**/*.js",
    "dev": "watchify lib/behavior-system.js -s BehaviorSystem -o dist/behavior-system.js -v",
    "build": "browserify lib/behavior-system.js -s BehaviorSystem -o dist/behavior-system.js && npm run min",
    "min": "uglifyjs dist/behavior-system.js -c -m -o dist/behavior-system.min.js",
    "prepublishOnly": "npm test && npm run build"
  },
  "tonicExampleFilename": "example.js",
  "keywords": [
    "game",
    "behavior",
    "system",
    "javascript",
    "html5",
    "canvas",
    "modular",
    "component"
  ],
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^16.2.0",
    "istanbul": "^0.4.5",
    "standard": "^11.0.1",
    "tap-dot": "^1.0.5",
    "tape": "^4.9.0",
    "uglify-js": "^3.3.23",
    "watchify": "^3.11.0"
  },
  "files": [
    "example.js",
    "lib/",
    "dist/",
    "LICENSE"
  ],
  "engines": {
    "node": ">=8.x"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            [ "babel-preset-env", { "loose": true} ]
          ]
        }
      ]
    ]
  }
}
